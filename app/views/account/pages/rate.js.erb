$('#edit_page_'+'<%= @page.id %>'+' .btn-group').hide();
$('#edit_page_'+'<%= @page.id %>')
	.append('<img class="spinner" src=<%= image_path('spinner.gif') %> />');
setTimeout(function(){
	$('.spinner').remove();
	$('#edit_page_'+'<%= @page.id %> .btn-group').show();
	$('#'+'<%= @page.id %>').html("<%=j render 'rating', { page: @page } %>");
	$('.progress').parent().closest('div').html("<%=j render 'progress_bar', { page: @page } %>");
}, 400);
